.container {
	padding: 20px;
	display: flex;
	flex-direction: column;
}

.title {
	font-size: 20px;
	font-weight: 400;
	color: #333;
}
.content {
	margin: 10px 0;
	font-size: 14px;
	color: #666666;
	font-weight: 300;
}

.share > button {
	background-color: #8bc34a;
	color: #FFFFFF;
	box-shadow: 0 5px 10px -5px #8bc34a;
	margin: 40px 0;
}

.apps {
	display: flex;
	flex-direction: row;
}
.apps > view {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	width: 100px;
}
.apps > view > image {
	width: 50px;
	height: 50px;
	border-radius: 50px;
}
.apps > view > text {
	font-size: 12px;
	color: red;
	font-weight: 300;
	margin: 10px 0;
}