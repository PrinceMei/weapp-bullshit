.container {
	padding: 20px;
}
.form {
	display: flex;
	flex-direction: row;
	border-radius: 50px;
	overflow: hidden;
	box-shadow: 0 5px 20px -10px #AAAAAA;
}
.form > input {
	flex: 1;
	background-color: #EEEEEE;
	height: 35px;
	padding: 5px;
	padding-left: 10px;
	font-size: 14px;
	border: 1px solid #FFFFFF;
	border-radius: 50px 0 0 50px;
	color: #4caf50;
}
.form > view {
	width: 60px;
	background-color: #4caf50;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	padding: 5px;
	padding-right: 10px;
	border: 1px solid #FFFFFF;
	border-left: none;
	border-radius: 0 50px 50px 0;
}
.form > view > text {
	flex: 1;
	font-size: 12px;
	color: #FFFFFF;
	text-align: center;
}

.body {
	margin: 20px 0;
}
.body > text {
	font-size: 14px;
	color: #666666;
	line-height: 22px;
	font-weight: 300;
}

.help {
	padding: 20px;
	margin: 10px;
	display: flex;
	align-items: center;
	justify-content: center;
}
.help > text {
	color: #666666;
	font-weight: 400;
	font-size: 12px;
}

.share {
	position: fixed;
	right: 20px;
	bottom: 40px;
	width: 50px !important;
	height: 50px;
	background-color: #03a9f4;
	display: flex;
	align-items: center;
	justify-content: center;
	color: #FFFFFF;
	border-radius: 50px;
	font-size: 12px;
	font-weight: 300px;
	box-shadow: 0 5px 10px -5px #03a9f4;
}

.copy {
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
	margin: 20px;
}
.copy > view {
	width: 100px;
	height: 40px;
	border-radius: 50px;
	background-color: #795548;
	display: flex;
	align-items: center;
	justify-content: center;
	box-shadow: 0 5px 10px -5px #795548;
	padding: 0 10px;
}
.copy > view > text {
	color: #FFFFFF;
	font-size: 14px;
	font-weight: 400;
}

.avatar {
	box-shadow: 0 5px 10px -5px #999;
	width: 100px;
	height: 100px;
	border-radius: 100px;
	overflow: hidden;
	margin-bottom: -35px;
}
.avatar > image {
	width: 100px;
	height: 100px;
	border-radius: 100px;
	border: 1px solid #FFFFFF;
}
.avatar-box {
	display: flex;
	align-items: center;
	justify-content: center;
}